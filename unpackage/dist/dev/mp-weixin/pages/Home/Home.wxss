.page {
  padding: 22rpx 24rpx;
}
.notice {
  margin: 0 0 21rpx 0;
  border-radius: 12rpx;
  box-shadow: 0px 3px 16px 0px rgba(41, 41, 42, 0.22);
}
.menu-list {
  width: 100%;
  background-color: #ffffff;
  margin-top: 21rpx;
  border-radius: 10px;
}
.menu-list .row-list {
  width: 100%;
  height: 114rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.menu-list .row-list .row-item {
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  padding-bottom: 18rpx;
}
.menu-list .row-list .row-item .row-label {
  font-size: 26rpx;
  font-family: Source Han Sans CN;
  color: #000000;
  padding-left: 5rpx;
}
.menu-list .row-list .row-item .row-img {
  width: 25rpx;
}
.menu-list .row-list .row-item .hover-img {
  width: 28rpx;
  height: 10rpx;
  position: absolute;
  bottom: 0;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
}
.menu-list .col-list {
  width: 100%;
  min-height: 100rpx;
  display: flex;
  align-items: center;
  flex-flow: row wrap;
  padding: 30rpx 30rpx 0;
}
.menu-list .col-list .col-item {
  width: 20%;
  text-align: center;
  margin-bottom: 30rpx;
}
.menu-list .col-list .col-item .col-img {
  height: 30rpx;
}
.menu-list .col-list .col-item .col-label {
  font-size: 20rpx;
  font-family: Adobe Heiti Std;
  font-weight: normal;
  color: #666666;
}
.re-list {
  margin-top: 32rpx;
}
.re-list .tips {
  display: flex;
}
.re-list .tips image {
  width: 118rpx;
  height: 29rpx;
  margin-right: 19rpx;
}
.re-list .tips view {
  font-size: 20rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #666666;
  line-height: 34rpx;
}
.re-list .list {
  width: 100%;
  margin: 40rpx 0;
}
.re-list .list .item {
  width: 100%;
  height: 204rpx;
  border-radius: 10rpx;
  display: flex;
  background-color: #ffffff;
  margin-bottom: 24rpx;
}
.re-list .list .item .item-left {
  width: 290rpx;
  height: 100%;
}
.re-list .list .item .item-left image {
  width: 100%;
  height: 100%;
}
.re-list .list .item .item-right {
  padding: 24rpx;
  width: calc(100% - 290rpx);
}
.re-list .list .item .item-right .label1 {
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: bold;
  color: #222222;
  line-height: 44rpx;
}
.re-list .list .item .item-right .label2 {
  font-size: 20rpx;
  font-family: Source Han Sans CN;
  color: #3187F6;
  line-height: 42rpx;
}
.re-list .list .item .item-right .item-right-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 30rpx;
}
.re-list .list .item .item-right .item-right-footer .label3 {
  font-size: 26rpx;
  font-family: Source Han Sans CN;
  font-weight: bold;
  color: #F40707;
  line-height: 39rpx;
}
.re-list .list .item .item-right .item-right-footer .bnts {
  width: 96rpx;
  height: 42rpx;
}

